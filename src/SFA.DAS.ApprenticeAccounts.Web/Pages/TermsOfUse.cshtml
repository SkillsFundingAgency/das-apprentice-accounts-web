@page
@model SFA.DAS.ApprenticeAccounts.Web.Pages.TermsOfUseModel
@{
    ViewData["Title"] = "Terms of use";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-l">Accept the terms and conditions</h1>

        @if (Model.ReacceptTermsOfUseRequired)
        {
            <div class="govuk-inset-text">
                <h2 class="govuk-heading-s">What's changed</h2>
                <p>By using this service you agree to be contacted by email to give feedback on your training provider.</p>
            </div>
        }

        <h3 class="govuk-heading-m">To use this service </h3>
        <p class="govuk-body">You must be:</p>

        <ul class="govuk-list govuk-list--bullet">
            <li>a minimum of 15 years old</li>
            <li>on an apprenticeship</li>
        </ul>

        <h2 class="govuk-heading-m">By using this service</h2>
        <p class="govuk-body">You must agree to:</p>

        <ul class="govuk-list govuk-list--bullet">
            <li>use a legitimate email address that only you have access to</li>
            <li>keep your log in details secure and not share them with anyone </li>
            <li>provide true and accurate information</li>
            <li>not allow anyone to confirm any data on your behalf</li>
            <li>not submit data on anyone else's behalf</li>
            <li>sign out at the end of each session</li>
            <li>adhere to the <a class="govuk-link" href="https://www.legislation.gov.uk/ukpga/1990/18/contents" target="_blank" rel="noopener noreferrer">Computer Misuse Act 1990</a></li>
            <li>notify us of a change to your email address</li>
            <li>be contacted by email to give feedback on your training provider</li>
        </ul>

        <h2 class="govuk-heading-m">Responsibility for the service</h2>

        <p class="govuk-body">
            This service is run by the Department for Education.
            We do our best to make sure this service:
        </p>

        <ul class="govuk-list govuk-list--bullet">
            <li>is constantly available</li>
            <li>is virus free</li>
            <li>alerts users to any changes to terms of use and updates to the service</li>
        </ul>

        <p class="govuk-body">The Department for Education accepts no liability for:</p>

        <ul class="govuk-list govuk-list--bullet">
            <li>you being unable to access the service (for example, because of excessive demand or because we've taken the service down for maintenance)</li>
            <li>delay or failure in receiving data</li>
            <li>indirect damages arising from you using the service or relying on its content</li>
            <li>the content and availability of external websites that link to the service or which are linked from it</li>
        </ul>

        @if (Model.PresentAgreement | !ModelState.IsValid)
        {
            <form method="post" id="terms-of-use">                
                <div class="govuk-form-group">
                    <div class="govuk-checkboxes govuk-checkboxes--medium" data-module="govuk-checkboxes">
                        <div class="govuk-checkboxes__item">
                            <input class="govuk-checkboxes__input" asp-for="TermsOfUseAccepted" type="checkbox">
                            <label class="govuk-label govuk-checkboxes__label" for="TermsOfUseAccepted">
                                I accept the terms and conditions
                            </label>
                        </div>
                    </div>
                    <span asp-validation-for="TermsOfUseAccepted" class="govuk-error-message"></span>
                </div>
                <button class="govuk-button" data-module="govuk-button">Agree and continue</button>
            </form>
        }
    </div>
</div>